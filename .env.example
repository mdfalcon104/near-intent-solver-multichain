NODE_ENV=development
PORT=8080

# 1Click API Configuration
ONECLICK_JWT_TOKEN=your_jwt_token_here
# Get JWT token from: https://docs.google.com/forms/d/e/1FAIpQLSdrSrqSkKOMb_a8XhwF0f7N5xZ0Y5CYgyzxiAuoC2g4a2N68g/viewform

# Multi-Chain Private Keys Configuration
# Each chain requires a private key for sending funds during execution

# NEAR Configuration
CHAIN_NEAR_PRIVATE_KEY=ed25519:your_near_private_key
CHAIN_NEAR_NETWORK_ID=mainnet
CHAIN_NEAR_RPC_URL=https://rpc.mainnet.near.org

# Ethereum Configuration
CHAIN_ETHEREUM_PRIVATE_KEY=0x_your_ethereum_private_key
CHAIN_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Arbitrum Configuration
CHAIN_ARBITRUM_PRIVATE_KEY=0x_your_arbitrum_private_key
CHAIN_ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Polygon Configuration
CHAIN_POLYGON_PRIVATE_KEY=0x_your_polygon_private_key
CHAIN_POLYGON_RPC_URL=https://polygon-rpc.com

# Avalanche Configuration
CHAIN_AVALANCHE_PRIVATE_KEY=0x_your_avalanche_private_key
CHAIN_AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# BSC (Binance Smart Chain) Configuration
CHAIN_BSC_PRIVATE_KEY=0x_your_bsc_private_key
CHAIN_BSC_RPC_URL=https://bsc-dataseed.binance.org

# Optimism Configuration
CHAIN_OPTIMISM_PRIVATE_KEY=0x_your_optimism_private_key
CHAIN_OPTIMISM_RPC_URL=https://mainnet.optimism.io

# Base Configuration
CHAIN_BASE_PRIVATE_KEY=0x_your_base_private_key
CHAIN_BASE_RPC_URL=https://mainnet.base.org

# Aurora Configuration
CHAIN_AURORA_PRIVATE_KEY=0x_your_aurora_private_key
CHAIN_AURORA_RPC_URL=https://mainnet.aurora.dev

# Solana Configuration (optional - for future support)
CHAIN_SOLANA_PRIVATE_KEY=your_solana_private_key_base58

# Bitcoin Configuration (optional - for future support)
CHAIN_BITCOIN_PRIVATE_KEY=your_bitcoin_private_key

# Legacy NEAR (backward compatibility)
NEAR_NETWORK=mainnet
NEAR_NODE_URL=https://rpc.mainnet.near.org
NEAR_ACCOUNT_ID=solver.yourname.near
NEAR_PRIVATE_KEY=ed25519:your_private_key
VERIFIER_CONTRACT=verifier.near

# Legacy EVM (backward compatibility)
AURORA_RPC=https://mainnet.aurora.dev
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc
EVM_PRIVATE_KEY=0xyour_evmpk

# Solver Bus Configuration (WebSocket-based)
SOLVER_BUS_ENABLED=false
SOLVER_BUS_WS_URL=wss://solver-relay-v2.chaindefuser.com/ws
SOLVER_ID=market-maker-solver

# NEAR Account for NEP-413 Signing
NEAR_ACCOUNT_ID=solver.yourname.near
DEFUSE_CONTRACT=intents.near

# Quote Configuration
QUOTE_TTL_MS=5000
MAX_ORDER_USD=200
EXPOSURE_CAP_PCT=0.3
MARKUP_PCT=0.005
SLIPPAGE_BUFFER_PCT=0.005

# Inventory Management
# Path to inventory.json file (default: ./inventory.json)
INVENTORY_CONFIG_PATH=./inventory.json

# Redis (use localhost for local dev, redis for Docker)

# Redis
REDIS_URL=redis://redis:6379

# Database
DATABASE_URL=postgres://postgres:password@postgres:5432/solverdb
